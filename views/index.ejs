<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
  </head>
  <body>
    <h1>Home</h1>
      <a href="/auth/register">Register</a>

      <% if (user) { %>
        <a href="/messages/create">Create a New Message</a>
      <% } %>

      <ul>
        <% messages.forEach(message => { %>
          <li>
            <h3><%= message.title %></h3>
            <p><%= message.text %></p>
            <% if (user && user.membershipStatus) { %>
              <small>By: <%= message.User.firstName %> <%= message.User.lastName %> on <%= message.createdAt %></small>
            <% } else { %>
              <small>By a member on <%= message.createdAt %></small>
            <% } %>
          </li>
        <% }); %>
      </ul>

  </body>
</html>
